<div class="col-md-6 offset-md-3">

  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= article.title %></h4>
        <h6 class="card-subtitle mb-2 text-muted"><%= article.updated_at %></h6>
        <p class="card-text"><%= article.content %></p>
        <%= link_to 'Show', article, class: 'card-link' %>
        <%= link_to 'Edit', edit_article_path(article), class: 'card-link' %>
        <%= link_to 'Destroy', article, method: :delete, data: {confirm: 'Are you sure?'}, class: 'card-link' %>
      </div>
    </div>

    <br/>

  <% end %>

  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary btn-sm' %>

</div>
